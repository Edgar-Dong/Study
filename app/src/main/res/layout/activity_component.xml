<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".component.ComponentActivity">

    <Button
        android:id="@+id/jumpModule1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到Module1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="jumpModule1"/>

    <Button
        android:id="@+id/jumpModule2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="跳转到Module2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jumpModule1"
        android:onClick="jumpModule2"/>
</androidx.constraintlayout.widget.ConstraintLayout>