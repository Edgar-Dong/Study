<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.animation.FrameAnimationActivity">

    <Button
        android:id="@+id/start1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="start1Clicked"
        android:text="start1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="start2Clicked"
        android:text="start2"
        app:layout_constraintLeft_toRightOf="@id/start1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/targetView1"
        android:layout_width="600px"
        android:layout_height="404px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/start1" />

    <ImageView
        android:id="@+id/targetView2"
        android:layout_width="600px"
        android:layout_height="404px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/targetView1" />
</androidx.constraintlayout.widget.ConstraintLayout>